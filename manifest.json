{
    "manifest_version": 3,
    "name": "Help Me Out",
    "version": "1.0.0",
    "description": "Record Videos and share with your friends",
    "icons": {
          "128": "/images/icon.png" },

    "background":{
      "service_worker":"background.js"
    },

    "action": {
      "default_popup":"popup.html",
      "default_icon": {
        "16": "/images/icon.png",
        "48": "/images/icon.png",
        "128": "/images/icon.png"
      }
    },

    "host_permissions":[
      "http://*/",
      "https://*/*"
    ],

      "permissions": [
        "scripting",
      "tabs",
      "activeTab"
          ]



}